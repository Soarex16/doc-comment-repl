<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider id="DocComment.SampleLineMarkProvider"
                                        implementationClass="com.github.soarex16.doccommentrepl.ui.ExecuteSnippetLineMarkProvider"
                                        language="Python"/>
    </extensions>

    <actions>
        <action id="com.github.soarex16.doccommentrepl.python.ExecutePythonSnippetAction"
                class="com.github.soarex16.doccommentrepl.python.ExecutePythonSnippetAction"
                text="Run DOC REPL" description="Test action" icon="AllIcons.RunConfigurations.TestState.Run">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>